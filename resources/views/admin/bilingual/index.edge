  <!-- Quill JS -->
  <script src="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.js"></script>

  <!-- Pass data to JavaScript -->
  <script id="pageData" type="application/json">{{{ JSON.stringify({ welcomeSubtitle: welcomeSubtitle || '', lessonIntroduction: lessonIntroduction || '', aboutUsContent: aboutUsContent || '', sections: sections.map(s => ({ id: s.id, content: s.content || '' })) }) }}}</script>

  <script>
    // Parse page data
    var pageData = JSON.parse(document.getElementById('pageData').textContent);

    // Quill toolbar configuration
    var toolbarOptions = [
      ['bold', 'italic', 'underline'],
      [{ 'list': 'ordered'}, { 'list': 'bullet' }],
      ['link'],
      ['clean']
    ];

    // Initialize Quill editors for settings
    var welcomeSubtitleEditor = new Quill('#welcomeSubtitleEditor', {
      theme: 'snow',
      modules: { toolbar: toolbarOptions },
      placeholder: 'Enter welcome subtitle...'
    });
    welcomeSubtitleEditor.root.innerHTML = pageData.welcomeSubtitle;

    var lessonIntroEditor = new Quill('#lessonIntroEditor', {
      theme: 'snow',
      modules: { toolbar: toolbarOptions },
      placeholder: 'Enter lesson introduction...'
    });
    lessonIntroEditor.root.innerHTML = pageData.lessonIntroduction;

    var aboutUsEditor = new Quill('#aboutUsEditor', {
      theme: 'snow',
      modules: { toolbar: toolbarOptions },
      placeholder: 'Enter about us content...'
    });
    aboutUsEditor.root.innerHTML = pageData.aboutUsContent;

    // Initialize Quill editors for existing sections
    var sectionEditors = {};
    pageData.sections.forEach(function(section) {
      var editorEl = document.getElementById('sectionEditor_' + section.id);
      if (editorEl) {
        sectionEditors[section.id] = new Quill('#sectionEditor_' + section.id, {
          theme: 'snow',
          modules: { toolbar: toolbarOptions },
          placeholder: 'Enter section content...'
        });
        sectionEditors[section.id].root.innerHTML = section.content;
      }
    });

    // Initialize Quill for new section
    var newSectionEditor = new Quill('#newSectionEditor', {
      theme: 'snow',
      modules: { toolbar: toolbarOptions },
      placeholder: 'Enter section content...'
    });

    // Sync Quill content before form submission
    document.getElementById('settingsForm').addEventListener('submit', function() {
      document.getElementById('welcome_subtitle_hidden').value = welcomeSubtitleEditor.root.innerHTML;
      document.getElementById('lesson_introduction_hidden').value = lessonIntroEditor.root.innerHTML;
      document.getElementById('about_us_content_hidden').value = aboutUsEditor.root.innerHTML;
    });

    // Sync section editors before submission
    document.querySelectorAll('.section-form').forEach(function(form) {
      form.addEventListener('submit', function() {
        var sectionId = this.closest('.accordion-section').dataset.sectionId;
        document.getElementById('section_content_' + sectionId).value = sectionEditors[sectionId].root.innerHTML;
      });
    });

    // Sync new section editor
    document.getElementById('newSectionForm').addEventListener('submit', function() {
      document.getElementById('new_section_content').value = newSectionEditor.root.innerHTML;
    });

    // Toggle accordion
    function toggleAccordion(header) {
      var section = header.closest('.accordion-section');
      section.classList.toggle('open');
    }

    // Delete section
    function deleteSection(id, title) {
      if (confirm('Are you sure you want to delete "' + title + '"? This cannot be undone.')) {
        var form = document.getElementById('deleteForm');
        form.action = '/admin/bilingual/sections/' + id;
        form.submit();
      }
    }

    // Save all translations to database
    function saveAllTranslations() {
      var form = document.getElementById('saveTranslationsForm');

      // Clear any existing hidden inputs (except csrf)
      var existingInputs = form.querySelectorAll('input:not([name="_csrf"])');
      existingInputs.forEach(function(input) {
        input.remove();
      });

      // Collect settings translations (English)
      var settingsFields = ['welcome_title_en', 'welcome_subtitle_en', 'lesson_title_en', 'lesson_introduction_en', 'about_us_title_en', 'about_us_content_en'];
      settingsFields.forEach(function(field) {
        var el = document.querySelector('[data-field="' + field + '"]');
        if (el) {
          var value = el.dataset.html === 'true' ? el.innerHTML : el.innerText;
          if (value && value !== '(No translation)') {
            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = field;
            input.value = value;
            form.appendChild(input);
          }
        }
      });

      // Collect section translations (English)
      var sectionElements = document.querySelectorAll('[data-section-id][data-section-field]');
      var sectionsData = {};

      sectionElements.forEach(function(el) {
        var sectionId = el.dataset.sectionId;
        var field = el.dataset.sectionField;
        var value = el.dataset.html === 'true' ? el.innerHTML : el.innerText;

        if (value && value !== '(No translation)') {
          if (!sectionsData[sectionId]) {
            sectionsData[sectionId] = { id: sectionId };
          }
          sectionsData[sectionId][field] = value;
        }
      });

      // Add sections as JSON array
      var sectionsArray = Object.values(sectionsData);
      sectionsArray.forEach(function(section, index) {
        var idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'sections[' + index + '][id]';
        idInput.value = section.id;
        form.appendChild(idInput);

        ['title_en', 'content_en', 'q1_en', 'q2_en', 'q3_en'].forEach(function(field) {
          if (section[field]) {
            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'sections[' + index + '][' + field + ']';
            input.value = section[field];
            form.appendChild(input);
          }
        });
      });

      // Submit the form
      form.submit();
    }
  </script>
</body>
