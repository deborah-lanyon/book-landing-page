<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Miriam's Home</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
    }

    .header {
      text-align: center;
      color: white;
      margin-bottom: 30px;
      padding: 20px 0;
    }

    .header h1 {
      font-size: 28px;
      margin-bottom: 10px;
      font-weight: 700;
    }

    .header p {
      font-size: 16px;
      opacity: 0.9;
    }

    .header .subtitle {
      font-size: 16px;
      opacity: 0.9;
    }

    .header .subtitle p {
      margin: 0;
    }

    .header .subtitle a {
      color: white;
    }

    .accordion {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: none;
      padding: 40px 30px;
    }

    .accordion-item {
      border-bottom: 1px solid #e0e0e0;
    }

    .accordion-item:last-child {
      border-bottom: none;
    }

    .accordion-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 30px 20px;
      cursor: pointer;
      background: white;
      transition: background 0.2s ease;
      user-select: none;
      -webkit-tap-highlight-color: transparent;
    }

    .accordion-header:hover {
      background: #f8f9fa;
    }

    .accordion-header:active {
      background: #e9ecef;
    }

    .accordion-header-text {
      flex: 1;
      padding-right: 15px;
    }

    .accordion-title {
      font-size: 17px;
      font-weight: 600;
      color: #2c3e50;
      margin-bottom: 10px;
    }

    .accordion-question {
      font-size: 17px;
      color: #667eea;
      font-style: italic;
      margin-top: 5px;
    }

    .accordion-icon {
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      color: #667eea;
      font-weight: 300;
      transition: transform 0.3s ease;
      flex-shrink: 0;
    }

    .accordion-item.active .accordion-icon {
      transform: rotate(45deg);
    }

    .accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease, padding 0.3s ease;
      background: #f8f9fa;
    }

    .accordion-item.active .accordion-content {
      max-height: 2000px;
      padding: 20px;
    }

    .accordion-body {
      color: #495057 !important;
      line-height: 1.6 !important;
      font-size: 15px !important;
    }

    .accordion-body h1,
    .accordion-body h2,
    .accordion-body h3,
    .accordion-body h4,
    .accordion-body h5,
    .accordion-body h6 {
      color: #2c3e50 !important;
      margin-top: 0 !important;
      margin-bottom: 0.5em !important;
    }

    .accordion-body p,
    .accordion-body p.MsoNormal,
    .accordion-body .MsoNormal {
      margin-bottom: 15px !important;
      margin-top: 0 !important;
    }

    .accordion-body p:last-child,
    .accordion-body p.MsoNormal:last-child,
    .accordion-body .MsoNormal:last-child {
      margin-bottom: 0 !important;
    }

    .accordion-body img {
      max-width: 100% !important;
      height: auto !important;
      border-radius: 8px !important;
      margin: 10px 0 !important;
    }

    .accordion-body ul,
    .accordion-body ol {
      margin-left: 20px !important;
      margin-bottom: 1em !important;
    }

    .accordion-body a {
      color: #667eea !important;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: white;
    }

    .empty-state h2 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    .empty-state p {
      opacity: 0.8;
      font-size: 16px;
    }

    @media (max-width: 600px) {
      body {
        padding: 15px;
      }

      .header h1 {
        font-size: 24px;
      }

      .header p {
        font-size: 14px;
      }

      .accordion-title {
        font-size: 16px;
      }

      .accordion-header {
        padding: 16px;
      }

      .accordion-item.active .accordion-content {
        padding: 16px;
      }

      .form-grid {
        grid-template-columns: 1fr !important;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>{{ welcomeTitle }}</h1>
      <div class="subtitle">{{{ welcomeSubtitle }}}</div>
    </div>

    @if(lessonTitle)
      <div style="margin-bottom: 30px; padding: 40px 50px; background: white; border-radius: 12px; box-shadow: none;">
        <h2 style="color: #2c3e50; margin: 0 0 15px 0; font-size: 22px;">{{ lessonTitle }}</h2>
        @if(lessonIntroduction)
          <div style="color: #495057; line-height: 1.6; font-size: 15px;">{{{ lessonIntroduction }}}</div>
        @end
        @if(lessonImage)
          <img src="{{ lessonImage }}" alt="Lesson image" style="max-width: 100%; height: auto; border-radius: 8px; margin-top: 20px;">
        @end
      </div>
    @end

    @if(sections.length === 0)
      <div class="empty-state">
        <h2>Coming Soon</h2>
        <p>Content is being prepared. Check back soon!</p>
      </div>
    @else
      <div class="accordion" id="accordion">
        @each(section in sections)
          <div class="accordion-item" data-section-id="{{ section.id }}">
            <div class="accordion-header">
              <div class="accordion-header-text">
                <div class="accordion-title">{{ section.title }}</div>
                @if(section.reflectiveQuestion)
                  <div class="accordion-question">{{ section.reflectiveQuestion }}</div>
                @end
                @if(section.reflectiveQuestion2)
                  <div class="accordion-question">{{ section.reflectiveQuestion2 }}</div>
                @end
                @if(section.reflectiveQuestion3)
                  <div class="accordion-question">{{ section.reflectiveQuestion3 }}</div>
                @end
              </div>
              <div class="accordion-icon">+</div>
            </div>
            <div class="accordion-content">
              <div class="accordion-body">{{{ section.content }}}</div>
              @if(section.imageUrl)
                <img src="{{ section.imageUrl }}" alt="Section image" style="max-width: 100%; height: auto; border-radius: 8px; margin-top: 15px;">
              @end
            </div>
          </div>
        @end
      </div>

      <!-- About Us & Contact Form Section -->
      <div style="margin-top: 40px; padding: 40px 50px; background: white; border-radius: 12px; box-shadow: none;">
        <h3 style="color: #2c3e50; margin-bottom: 15px; font-size: 20px;">About Us</h3>
        <p style="color: #495057; margin-bottom: 25px; font-size: 15px; line-height: 1.6;">
          Reading God's Word is a devotional expository Bible study series that explains books of the Bible verse-by-verse. The series is put together by a team of Sydney based Christian leaders, Dr Alan & Alayne Thompson, David Glinatsis, Peter & Louise Knight and Phillip Jensen, and launched in 2026.
        </p>

        <h3 style="color: #2c3e50; margin-bottom: 15px; font-size: 20px;">Get In Touch</h3>

        @if(flashMessages.has('contactSuccess'))
          <div style="padding: 15px; margin-bottom: 20px; border-radius: 4px; background: #d4edda; color: #155724; border: 1px solid #c3e6cb;">
            {{ flashMessages.get('contactSuccess') }}
          </div>
        @end

        @if(flashMessages.has('contactErrors'))
          <div style="padding: 15px; margin-bottom: 20px; border-radius: 4px; background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb;">
            <strong>Please correct the following:</strong>
            <ul style="margin: 10px 0 0 0; padding-left: 20px;">
              @each(error in flashMessages.get('contactErrors'))
                <li>{{ error.message }}</li>
              @end
            </ul>
          </div>
        @end

        <form method="POST" action="/contact">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}">

          <div class="form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 15px;">
            <div>
              <label for="firstName" style="display: block; margin-bottom: 5px; font-weight: 600; color: #2c3e50; font-size: 14px;">First Name *</label>
              <input type="text" id="firstName" name="firstName" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; box-sizing: border-box;">
            </div>
            <div>
              <label for="lastName" style="display: block; margin-bottom: 5px; font-weight: 600; color: #2c3e50; font-size: 14px;">Last Name</label>
              <input type="text" id="lastName" name="lastName" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; box-sizing: border-box;">
            </div>
          </div>

          <div class="form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 15px;">
            <div>
              <label for="town" style="display: block; margin-bottom: 5px; font-weight: 600; color: #2c3e50; font-size: 14px;">Town *</label>
              <input type="text" id="town" name="town" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; box-sizing: border-box;">
            </div>
            <div>
              <label for="email" style="display: block; margin-bottom: 5px; font-weight: 600; color: #2c3e50; font-size: 14px;">Email *</label>
              <input type="email" id="email" name="email" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; box-sizing: border-box;">
            </div>
          </div>

          <div style="margin-bottom: 15px;">
            <label style="display: block; margin-bottom: 10px; font-weight: 600; color: #2c3e50; font-size: 14px;">Would you like</label>
            <div style="display: flex; flex-direction: column; gap: 8px;">
              <label style="display: flex; align-items: center; font-weight: normal; color: #495057; font-size: 14px; cursor: pointer;">
                <input type="checkbox" name="wantFollowJesus" value="true" style="margin-right: 10px;">
                Further information on how to become a follower of Jesus Christ
              </label>
              <label style="display: flex; align-items: center; font-weight: normal; color: #495057; font-size: 14px; cursor: pointer;">
                <input type="checkbox" name="wantBible" value="true" style="margin-right: 10px;">
                A Bible in your own language
              </label>
              <label style="display: flex; align-items: center; font-weight: normal; color: #495057; font-size: 14px; cursor: pointer;">
                <input type="checkbox" name="wantPrayerRequest" value="true" style="margin-right: 10px;">
                Share a prayer request
              </label>
              <label style="display: flex; align-items: center; font-weight: normal; color: #495057; font-size: 14px; cursor: pointer;">
                <input type="checkbox" name="wantAskQuestion" value="true" style="margin-right: 10px;">
                Ask a question
              </label>
            </div>
          </div>

          <div style="margin-bottom: 20px;">
            <label for="message" style="display: block; margin-bottom: 5px; font-weight: 600; color: #2c3e50; font-size: 14px;">Your Question or Feedback</label>
            <textarea id="message" name="message" rows="4" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; box-sizing: border-box; resize: vertical;"></textarea>
          </div>

          <button type="submit" style="display: inline-block; padding: 12px 30px; background: #667eea; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; font-weight: 600;">
            Send Message
          </button>
        </form>
      </div>

      <!-- QR Code Section -->
      <div style="text-align: center; margin-top: 40px; padding: 40px 50px; background: white; border-radius: 12px; box-shadow: none;">
        <h3 style="color: #2c3e50; margin-bottom: 15px; font-size: 20px;">Share this page</h3>
        <p style="color: #666; margin-bottom: 20px; font-size: 14px;">Scan the QR code to open on your phone</p>
        <div id="qrcode" style="display: inline-block;"></div>
        <p style="color: #999; margin-top: 15px; font-size: 12px; word-break: break-all;">{{ request.url() }}</p>
      </div>
    @end
  </div>

  <!-- QR Code Library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const accordionItems = document.querySelectorAll('.accordion-item');

      accordionItems.forEach(item => {
        const header = item.querySelector('.accordion-header');

        header.addEventListener('click', function() {
          // Close all other items
          accordionItems.forEach(otherItem => {
            if (otherItem !== item && otherItem.classList.contains('active')) {
              otherItem.classList.remove('active');
            }
          });

          // Toggle current item
          item.classList.toggle('active');
        });
      });

      // Generate QR Code
      const currentUrl = window.location.href;
      new QRCode(document.getElementById('qrcode'), {
        text: currentUrl,
        width: 200,
        height: 200,
        colorDark: '#2c3e50',
        colorLight: '#ffffff',
        correctLevel: QRCode.CorrectLevel.H
      });
    });
  </script>
</body>
</html>
