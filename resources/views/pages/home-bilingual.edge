  <!-- QR Code Library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Generate QR Code
      const currentUrl = window.location.href;
      const qrContainer = document.getElementById('qrcode');
      if (qrContainer) {
        new QRCode(qrContainer, {
          text: currentUrl,
          width: 200,
          height: 200,
          colorDark: '#2c3e50',
          colorLight: '#ffffff',
          correctLevel: QRCode.CorrectLevel.H
        });
      }

      // Language selector functionality (for right column only)
      const languageBtn = document.getElementById('languageBtn');
      const languageDropdown = document.getElementById('languageDropdown');
      const currentLangSpan = document.getElementById('currentLang');
      const languageOptions = document.querySelectorAll('.language-option');

      // Store original English content
      const originalContent = {
        lessonTitle: document.getElementById('lessonTitleRight')?.innerHTML,
        lessonIntro: document.getElementById('lessonIntroRight')?.innerHTML,
        aboutUsTitle: document.getElementById('aboutUsTitleRight')?.innerHTML,
        aboutUsContent: document.getElementById('aboutUsContentRight')?.innerHTML,
        sections: []
      };

      document.querySelectorAll('.bilingual-section[data-section-id]').forEach(section => {
        const sectionId = section.dataset.sectionId;
        originalContent.sections.push({
          id: sectionId,
          title: section.querySelector('.section-title-right')?.innerHTML,
          content: section.querySelector('.section-content-right')?.innerHTML,
          q1: section.querySelector('.section-q1-right')?.innerHTML,
          q2: section.querySelector('.section-q2-right')?.innerHTML,
          q3: section.querySelector('.section-q3-right')?.innerHTML
        });
      });

      // Toggle dropdown
      languageBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        languageDropdown.classList.toggle('show');
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', function() {
        languageDropdown.classList.remove('show');
      });

      // Handle language selection
      languageOptions.forEach(option => {
        option.addEventListener('click', async function() {
          const lang = this.dataset.lang;
          const langName = this.dataset.name;

          // Update active state
          languageOptions.forEach(opt => opt.classList.remove('active'));
          this.classList.add('active');
          languageDropdown.classList.remove('show');

          // Update column headers
          document.getElementById('rightColumnLang').textContent = langName;
          document.querySelectorAll('.right-col-lang-label').forEach(el => {
            el.textContent = langName;
          });

          if (lang === 'en') {
            // Restore original English content
            restoreEnglishContent();
            currentLangSpan.textContent = 'English';
            return;
          }

          // Show loading state
          languageBtn.classList.add('loading');
          currentLangSpan.textContent = 'Translating...';

          try {
            const response = await fetch('/api/translate/page', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ targetLanguage: lang })
            });

            if (!response.ok) {
              throw new Error('Translation failed');
            }

            const result = await response.json();

            if (result.success) {
              applyTranslationsToRightColumn(result.data);
              currentLangSpan.textContent = langName;
            } else {
              throw new Error(result.error || 'Translation failed');
            }
          } catch (error) {
            console.error('Translation error:', error);
            alert('Translation failed. Please try again.');
            currentLangSpan.textContent = 'English';
            restoreEnglishContent();
          } finally {
            languageBtn.classList.remove('loading');
          }
        });
      });

      function restoreEnglishContent() {
        const lessonTitleEl = document.getElementById('lessonTitleRight');
        const lessonIntroEl = document.getElementById('lessonIntroRight');
        const aboutUsTitleEl = document.getElementById('aboutUsTitleRight');
        const aboutUsContentEl = document.getElementById('aboutUsContentRight');

        if (lessonTitleEl && originalContent.lessonTitle) {
          lessonTitleEl.innerHTML = originalContent.lessonTitle;
        }
        if (lessonIntroEl && originalContent.lessonIntro) {
          lessonIntroEl.innerHTML = originalContent.lessonIntro;
        }
        if (aboutUsTitleEl && originalContent.aboutUsTitle) {
          aboutUsTitleEl.innerHTML = originalContent.aboutUsTitle;
        }
        if (aboutUsContentEl && originalContent.aboutUsContent) {
          aboutUsContentEl.innerHTML = originalContent.aboutUsContent;
        }

        originalContent.sections.forEach(section => {
          const sectionEl = document.querySelector(`.bilingual-section[data-section-id="${section.id}"]`);
          if (sectionEl) {
            const titleEl = sectionEl.querySelector('.section-title-right');
            const contentEl = sectionEl.querySelector('.section-content-right');
            const q1El = sectionEl.querySelector('.section-q1-right');
            const q2El = sectionEl.querySelector('.section-q2-right');
            const q3El = sectionEl.querySelector('.section-q3-right');

            if (titleEl && section.title) titleEl.innerHTML = section.title;
            if (contentEl && section.content) contentEl.innerHTML = section.content;
            if (q1El && section.q1) q1El.innerHTML = section.q1;
            if (q2El && section.q2) q2El.innerHTML = section.q2;
            if (q3El && section.q3) q3El.innerHTML = section.q3;
          }
        });
      }

      function applyTranslationsToRightColumn(data) {
        // Apply lesson translations
        if (data.lessonTitle) {
          const lessonTitleEl = document.getElementById('lessonTitleRight');
          if (lessonTitleEl) lessonTitleEl.innerHTML = data.lessonTitle;
        }
        if (data.lessonIntroduction) {
          const lessonIntroEl = document.getElementById('lessonIntroRight');
          if (lessonIntroEl) lessonIntroEl.innerHTML = data.lessonIntroduction;
        }

        // Apply section translations
        if (data.sections) {
          data.sections.forEach(section => {
            const sectionEl = document.querySelector(`.bilingual-section[data-section-id="${section.id}"]`);
            if (sectionEl) {
              const titleEl = sectionEl.querySelector('.section-title-right');
              const contentEl = sectionEl.querySelector('.section-content-right');
              const q1El = sectionEl.querySelector('.section-q1-right');
              const q2El = sectionEl.querySelector('.section-q2-right');
              const q3El = sectionEl.querySelector('.section-q3-right');

              // Preserve section number when updating title
              if (titleEl) {
                const numberSpan = titleEl.querySelector('.section-number');
                const number = numberSpan ? numberSpan.outerHTML : '';
                titleEl.innerHTML = number + ' ' + section.title;
              }
              if (contentEl) contentEl.innerHTML = section.content;
              if (q1El && section.reflectiveQuestion) q1El.innerHTML = section.reflectiveQuestion;
              if (q2El && section.reflectiveQuestion2) q2El.innerHTML = section.reflectiveQuestion2;
              if (q3El && section.reflectiveQuestion3) q3El.innerHTML = section.reflectiveQuestion3;
            }
          });
        }
      }
    });
  </script>
</body>
</html>
